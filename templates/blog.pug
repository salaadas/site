extends base.pug

block content
  include ./post_metadata.pug
  article
    h1(class='')= title
    small(class='')= `Read time estimate: ${read_time}`
    //- NOTE: Used emoji in description
    blockquote= `ðŸ“© ${description}`
    main(class='') !{content}
  hr
  p
    | #{`This article was posted on ${date}. My opinions may have change since the publication. Please `}
    a(href='/contact') contact me
    | #{` before jumping to conclusions shall there is anything unclear.`}
  if series
    p
      | #{`Series: `}
      a(href=`/blog/series/${series}`)= `${series}`
  if tags
    p
      | #{`Tags: `}
      each tag in tags
        code(style='background: #64748b; border-radius: 5px; padding: 1px')=`${tag}`
        | #{" "}
    p
      | #{`The art for mudkip was taken from the Internet`}
