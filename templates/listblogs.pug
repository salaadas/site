extends layout.pug

block title
  = "Salaadas's blog"

block content
  div(class='w-full h-full px-4 md:px-6 text-xl text-gray-800 leading-normal')
    h1(class='text-center text-3xl')= 'All about tech'
    h3(class='text-center text-lg mt-2')= 'Blogs'
    if blogs
      each fm in blogs
        a(class='mb-3', href='/blogs/' + fm.file_name)
          div(class='flex flex-col mb-5 px-4 py-6 cursor-pointer')
            h2(class='text-2xl font-semibold hover:underline')= fm.body.data.title
            div(class='flex-col items-center mt-2')
              p(class='hidden md:block text-base ml-2 mr-2')= fm.body.data.description
              p(class='hidden md:block text-base ml-2 mr-2')= fm.body.data.date
              p(class='hidden md:block text-base mx-2')= fm.body.tags

